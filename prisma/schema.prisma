generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id              Int       @id @default(autoincrement())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  email           String    @unique
  nome            String?
  password        String    
  telefone        String
  role            UserRole  @default(USER)
  imagem          String?
  
  eventsCreated   Event[]
  participando    Registros[]

  @@map("users")
}

model Event {
  id               Int          @id @default(autoincrement())
  createdAt        DateTime
  titulo           String
  descricao        String
  data             DateTime
  hora_inicio      String
  hora_fim         String
  localizacao      String
  imagem           String
  categoria        String
  preco            Float
  ativo            Boolean

  creatorId        Int
  creator          User   @relation(fields: [creatorId], references: [id])
  participantes    Registros[]

  @@map("eventos")
}

model Registros {
  id          String     @id @default(cuid())
  userId      Int
  eventId     Int
  createdAt   DateTime
  status           StatusRegistros @default(PENDENTE)

  user        User       @relation(fields: [userId], references: [id])
  event       Event      @relation(fields: [eventId], references: [id])

  @@unique([userId, eventId])
  @@map("registros")     
}

enum UserRole {
    USER
    ADMIN
}

enum StatusRegistros {
  PENDENTE
  CONFIRMADO
  CANCELADO
  FINALIZADO
  DESATIVADO
}
